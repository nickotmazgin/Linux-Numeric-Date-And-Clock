<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
  <schema id="org.nick.numericclock" path="/org/nick/numericclock/">
    <key name="format-string" type="s">
      <default>'%A %d/%m/%Y %H:%M'</default>
      <summary>Clock format</summary>
      <description>strftime format string for the top bar clock.</description>
    </key>
    <key name="update-interval" type="i">
      <default>60</default>
      <summary>Update interval (seconds)</summary>
      <description>How often to refresh the label.</description>
    </key>
  </schema>
</schemalist>
